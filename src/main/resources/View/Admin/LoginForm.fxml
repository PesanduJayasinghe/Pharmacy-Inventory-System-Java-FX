            <Button layoutX="106.0" layoutY="367.0" mnemonicParsing="false" onAction="#btnRetry" prefHeight="26.0" prefWidth="138.0" style="-fx-background-color: #00000000; -fx-text-fill: WHITE;" text="Retry">
